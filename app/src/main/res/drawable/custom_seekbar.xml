            <corners android:radius="5dp"/>

            <gradient
                android:angle="180"
                android:endColor="#50d0d0d0"
                android:startColor="#50dadada" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />

                <gradient
                    android:angle="180"
                    android:endColor="#a9adff"
                    android:startColor="#3523ba" />
            </shape>
        </clip>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />

                <gradient
                    android:angle="180"
                    android:endColor="#9288ed"
                    android:startColor="#3523ba" />
            </shape>
        </clip>
    </item>
